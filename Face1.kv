BoxLayoutExample:

<BoxLayoutExample>
    orientation: 'vertical'
    Button:
        font_size: '80dp'
        text:'Refresh Datasets'
        pos_hint: {'center_x': .5}
        size_hint: .85, 1
        on_press: root.refresh_datasets()
    Button:
        font_size: '80dp'
        text:'Stats'
        pos_hint: {'center_x': .5}
        size_hint: .85, 1        
        on_press: root.stats()
    Button:
        font_size: '80dp'
        text:'Add CSV File*'
        pos_hint: {'center_x': .5}
        size_hint: .85, 1
        on_press: root.add_lottery_type()
    Button:
        font_size: '80dp'
        text:'Settings'
        pos_hint: {'center_x': .5}
        size_hint: .85, 1
        on_press: root.settings()


